<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/pbDroogNatStat"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:max="100"
        android:maxHeight="30dp"
        android:minHeight="30dp"
        android:minWidth="250dp"
        android:progress="85"
        android:progressDrawable="@drawable/droognatbar" />

    <TextView
        android:id="@+id/tvNat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pbDroogNatStat"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/colorPrimary"
        android:text="@string/percent100"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDroog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pbDroogNatStat"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="@string/percent100"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>
